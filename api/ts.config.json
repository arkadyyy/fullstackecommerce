{
    "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "strict" : true,
    "skipLibCheck" : true,
    "resolveJsonModule" : true,
    "forceConsistentCasingInFileName" : true,
    "noEmit" : false,
    "isolatedModules" : true,

    "paths": {
        "*": [
            "node_modules/*"
           
        ]
    }
}

}